<div class="contents-container">
  <div class="video-card">
    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <a href="/videos/{{video.id}}/edit" class="add-video-button" id="edit-button">Edit</a>

    <form method="post" action="/videos/{{video.id}}/delete">
      <button class="input-button" id="delete-button" type="submit">Delete</button>
    </form>

    <div class="video-player">
        <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>
  </div>
</div>
