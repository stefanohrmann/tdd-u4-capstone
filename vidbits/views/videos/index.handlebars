<div class="contents-container" id="videos-container">
  {{#each videos as |video|}}
  <div class="video-card">
    <div class="video-player">
        <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="video-title">
      <a href="/videos/{{video.id}}" title="{{video.title}}" alt="">{{video.title}}</a>
    </div>
  </div>
  {{/each}}
</div>
<div class="contents-container">
  <a href="/videos/create" class="add-video-button">Add a video</a>
</div>
